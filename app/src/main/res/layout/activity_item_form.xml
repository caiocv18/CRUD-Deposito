<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/activity_form_item_name"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:hint="@string/string_form_item_name"
        android:inputType="textCapWords"
        android:layout_height="wrap_content">
    </EditText>

    <EditText
        android:id="@+id/activity_form_item_quantity"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:hint="@string/string_form_item_quantity"
        android:inputType="number"
        android:layout_height="wrap_content">
    </EditText>

    <EditText
        android:id="@+id/activity_form_item_price"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:hint="@string/string_form_item_price"
        android:inputType="numberDecimal"
        android:layout_height="wrap_content">
    </EditText>

</LinearLayout>